{
  "name": "customary-testing",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "// ---- public ---- //": "//",
    "test": "wireit",
    "// ---- troubleshoot ---- //": "//",
    "test:in-dist": "wireit",
    "// ---- make ---- //": "//",
    "dist": "wireit",
    "clean": "wireit",
    "// ---- dev ---- //": "//",
    "dev": "wireit",
    "test:in-src": "wireit",
    "compile:watch": "wireit",
    "// ---- command ---- //": "//",
    "dist:library": "wireit",
    "compile": "wireit",
    "// ---- workaround ---- //": "//",
    "fix-mocha-html-reporter": "./package-json-fix-mocha-html-reporter.sh"
  },
  "wireit": {
    "test": {
      "command": "npm run test:in-dist",
      "service": true,
      "dependencies": ["dist"]
    },
    "test:in-dist": {
      "command": "npx web-dev-server --watch --root-dir=.dist/development --open=/test.html",
      "service": true
    },
    "dist": {
      "command": "npm run dist:library",
      "dependencies": ["build"]
    },
    "dist:library": {
      "command": "npx webpack"
    },
    "build": {
      "command": "npm run compile",
      "dependencies": ["clean", "dist:participants"]
    },
    "compile": {
      "command": "tsc --build --pretty --verbose"
    },
    "clean": {
      "dependencies": ["clean:dist", "clean:src"]
    },
    "clean:dist": {
      "command": "rimraf .dist"
    },
    "clean:src": {
      "command": "rimraf --glob src/**/*.{d.ts,js.map,js} --glob tsconfig.tsbuildinfo"
    },
    "dev": {
      "command": "npm run compile:watch",
      "service": true
    },
    "compile:watch": {
      "command": "tsc --build --pretty --verbose --watch",
      "service": true
    },
    "dist:participants": {
      "dependencies": [
        "../customary:dist"
      ]
    }
  },
  "dependencies": {
    "chai": "^5.1.1",
    "customary": "file:../customary",
    "mocha": "^10.7.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.16.5",
    "@web/dev-server": "^0.4.6",
    "copy-webpack-plugin": "^12.0.2",
    "remove-files-webpack-plugin": "^1.5.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "wireit": "^0.14.9"
  },
  "imports": {
    "#customary-testing/*.js": "./src/*.ts",
    "#test-runner-customary/*.js": "./src/test-runner-customary/*.ts",
    "#customary/*.js": "./node_modules/customary/src/*.ts"
  },
  "license": "MIT",
  "author": "Andre de Oliveira"
}
